-# = render "devise/shared/error_messages", resource: resource
.user-main
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .registration__nickname
      = f.label :nickname, "ニックネーム" 
      %span.class.must 必須
      %br/
      = f.text_field :nickname, placeholder: 'ニックネーム'
    .registration__email
      = f.label :email, "Eメール"
      %span.class.must 必須
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
    .registration__password
      = f.label :password, "パスワード"
      %span.class.must 必須
      - if @minimum_password_length
        %em
          /(#{@minimum_password_length} )
      %br/
      = f.password_field :password, autocomplete: "new-password", placeholder: "６文字以上の半角英数字"
    .password__confirmation
      = f.label :password_confirmation, "確認用パスワード"
      %span.class.must 必須
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードをもう一度入力してください"

    .actions
      = f.submit "登録する", class: 'signin--btn' 

