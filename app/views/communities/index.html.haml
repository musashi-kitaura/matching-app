.wrapper
  = render "categories/side_bar"
  .communities
    .communities-header
      .communities-header__name
        %h1コミュニティー

    .communities-main
      .communities-main__recommended
        %h1おすすめ
        -@communties.each do |communty|
          =link_to community_path(communty.id) do
            .communities-main__recommended-index
              .communities-main__recommended-index--details
                .communities-image  
                  = image_tag communty.image.url, width: '100%',height: '100%'
                .communities-name
                  = communty.name
      .communities-main__category
        %h1カテゴリー
        -@categories.each do |category|
          =link_to category_path(category.id) do
            .communities-main__category-index
              .communities-main__category-index--details
                .category-image  
                  = image_tag category.image.url, width: '100%',height: '100%'
                .category-name
                  = category.name