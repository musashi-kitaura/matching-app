.message  
  .message-header
    .message-header__top
      メッセージ
    .message-header__content  
      やりとり中
  .message-main 
    - @users.each do |user|
      .message-main__content
        = image_tag "https://navi.harinezumi.org/wp-content/uploads/kohari12.jpg",class:"message-main__content--image"
        .message-main__content--box
          %span
            = user.nickname
          %span
            24歳
          %span  
            東京
          .message-maim__content--message
            メッセージが届いています
        = form_with model: @room, local: true do |f|
          = fields_for @entry do |e|
            = e.hidden_field :user_id, :value=> @user.id
          = f.submit "メッセージを始める" ,class: 'btn btn-outline-info mt-4 ml-4'    

